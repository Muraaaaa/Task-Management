<header class="navbar navbar-fixed-top navbar-inverse" style="background:#008080; ">
  <div class="container">
    <%= link_to "Task App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップ", root_path, id: "menu" %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path, id: "menu" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle-header-list" data-toggle="dropdown" id="dropdown-title">
            <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Show", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, id: "menu" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
